<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_csr_employee_profile_tree" model="ir.ui.view">
        <field name="name">csr.employee.profile.list</field>
        <field name="model">csr.employee.profile</field>
        <field name="arch" type="xml">
            <list string="Employee Leaderboard">
                <field name="name"/>
                <field name="department_id"/>
                <field name="rank_display"/>
                <field name="total_impact_points"/>
                <field name="volunteering_hours"/>
                <field name="donation_amount"/>
            </list>
        </field>
    </record>

    <record id="view_csr_employee_profile_kanban" model="ir.ui.view">
        <field name="name">csr.employee.profile.kanban</field>
        <field name="model">csr.employee.profile</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="total_impact_points"/>
                <field name="volunteering_hours"/>
                <field name="donation_amount"/>
                <field name="rank_display"/>
                <field name="image_128"/> <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="image_128" widget="image" class="oe_kanban_avatar"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_record_subtitle">
                                    <span class="badge text-bg-primary"><i class="fa fa-trophy" title="Rank"/> <field name="rank_display"/></span>
                                </div>
                                <div class="mt-2">
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <h4 class="mb-0"><field name="total_impact_points"/></h4>
                                            <small>Impact Points</small>
                                        </div>
                                        <div class="col-6 text-center">
                                            <h4 class="mb-0"><field name="volunteering_hours"/></h4>
                                            <small>Hours</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <div class="progress" style="height: 5px;">
                                        <div class="progress-bar bg-success" role="progressbar" t-att-style="'width: ' + (record.volunteering_hours.raw_value / 100 * 100) + '%'" aria-valuenow="record.volunteering_hours.raw_value" aria-valuemin="0" aria-valuemax="100"/>
                                    </div>
                                    <small class="text-muted">Progress towards 100 hours goal</small>
                                </div>
                                <div class="mt-3">
                                    <button name="action_redeem_reward" type="object" class="btn btn-primary btn-sm">
                                        <i class="fa fa-gift"/> Redeem Rewards
                                    </button>
                                    <button name="action_view_activities" type="object" class="btn btn-secondary btn-sm ms-2">
                                        <i class="fa fa-list"/> Activities
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_csr_employee_profile_kanban" model="ir.actions.act_window">
        <field name="name">My Impact Dashboard</field>
        <field name="res_model">csr.employee.profile</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_my_profile': 1}</field>
    </record>

    <record id="action_csr_employee_profile_tree" model="ir.actions.act_window">
        <field name="name">Company Leaderboard</field>
        <field name="res_model">csr.employee.profile</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <record id="view_csr_employee_profile_form" model="ir.ui.view">
        <field name="name">csr.employee.profile.form</field>
        <field name="model">csr.employee.profile</field>
        <field name="arch" type="xml">
            <form string="Employee Profile">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_redeem_reward" type="object" class="oe_stat_button" icon="fa-gift">
                            <field name="total_impact_points" widget="statinfo" string="Impact Points"/>
                        </button>
                         <button name="action_view_activities" type="object" class="oe_stat_button" icon="fa-list">
                            <span>Activities</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="department_id" readonly="1"/>
                        <field name="volunteering_hours" readonly="1"/>
                        <field name="donation_amount" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Activities">
                            <field name="activity_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>